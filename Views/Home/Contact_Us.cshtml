@model EAD_Project.Models.FEEDBACK

<head runat="server">
    <meta name="viewport" content="width=device-width" />

<link href="~/Content/login.css" rel="stylesheet" />
    <script src='<%= Url.Content("~/scripts/jquery-1.7.1.js") %>'></script>
    <script src='<%= Url.Content("~/scripts/jquery.validate.js") %>'></script>
    <script src='<%= Url.Content("~/scripts/jquery.validate.unobtrusive.js") %>'></script>
</head>

@using (Html.BeginForm("savefeedback", "Home", FormMethod.Post))
{
    
     <legend >Feel free to Send us your Feedback</legend>
      <div class="editor-label">  
   
       <table cellspacing="8" cellpadding="4">
                    
                     <tr>
                        
                        <td><h4>Your Name:</h4></td>
                        <td>@Html.TextBox("name","", new { type = "text",style="width:210px;height:25px", placeholder = "Full Name" })</td>
                        <td style="color:red; font-weight:bold;" >@Html.ValidationMessageFor(m => m.name)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Your Email:<h3></td>
                        <td>@Html.TextBox("email","",new { type = "email",style="width:210px;height:25px", placeholder = "example@mail.ru" })</td>
                        <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.email)</td>
                    </tr>
                    <tr>
                        
                        <td><h4>Subject:</h4></td>
                        <td>@Html.TextBox("subject","",new { type = "text",style="width:210px;height:25px", placeholder = "Subject" })</td>
                         <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.subject)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Message:</h4></td>
                        <td>@Html.TextBox("message","",new { type = "text",style="width:210px;height:100px", placeholder = "Detail" })</td>
                         <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.message)</td>
                    </tr>
           </table>
        

        <input type="submit" style="margin-left:150px" value="Send" />
        
    </div>
}
