@model EAD_Project.Models.ADD_POST
<head runat="server">
    <meta name="viewport" content="width=device-width" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<script src="/kartik-v-bootstrap-fileinput-d7b725d/js/fileinput.min.js" type="text/javascript"></script>
<link href="~/Content/post.css" rel="stylesheet" />
<link href="/kartik-v-bootstrap-fileinput-d7b725d/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
    <script src='<%= Url.Content("~/scripts/jquery-1.7.1.js") %>'></script>
    <script src='<%= Url.Content("~/scripts/jquery.validate.js") %>'></script>
    <script src='<%= Url.Content("~/scripts/jquery.validate.unobtrusive.js") %>'></script>
</head>

@using (Html.BeginForm("savepost", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<legend >Grab your chance to Create and Submit your Event</legend>
      <div class="editor-label">  
   
       <table cellspacing="8" cellpadding="4">
                    
                     <tr>
                       
                        <td><h4>Event Title:</h4></td>
                        <td>@Html.TextBox("title","", new { type = "text",style="width:310px;height:25px", placeholder = "Title" })</td>
                        <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.title)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Event Description:<h3></td>
                        <td>@Html.TextBox("description","",new { type = "text",style="width:310px;height:100px", placeholder = "Description" })</td>
                        <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.description)</td>
                    </tr>
                    <tr>
                        
                        <td><h4>Name:</h4></td>
                        <td>@Html.TextBox("name","",new { type = "text",style="width:310px;height:25px", placeholder = "Name" })</td>
                        <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.name)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Email: </h4></td>
                        <td>@Html.TextBox("email","",new { type = "email",style="width:310px;height:25px", placeholder = "example@hotmail.com" })</td>
                         <td style="color: red; font-weight: bold;">@Html.ValidationMessageFor(m => m.email)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Phone:</h4></td>
                        <td>@Html.TextBox("phone","",new { type = "text",style="width:210px;height:25px", placeholder = "Phone" })</td>
                        <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.phone)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Provice: </h4></td>
                        <td>
                            <select name="province">
                            <option value="#">Select</option>
                            <option value="Khaber Pakhton Khawa">Khaber Pakhton Khawa</option>
                            <option value="Punjab">Punjab</option>
                            <option value="Sindh">Sindh</option>
                            <option value="Balochistan">Balochistan</option>
                            <option value="Azad Kashmir">Azad Kashmir</option>
                            </select>
                        </td>
                        
                    </tr>

                     <tr>
                        
                        <td><h4>City: </h4></td>
                        <td>
                           <select name="city">
                            <option value="Lahore">Lahore</option>
                            <option value="Islamabad Pakhton Khawa">Islamabad Pakhton Khawa</option>
                            <option value="Faisalabad">Faisalabad</option>
                            <option value="Karachi">Karachi</option>
                            <option value="Gujranwala">Gujranwala</option>
                            <option value="Sargodha">Sargodha</option>
                        </select>
                        </td>
                        
                    </tr>
                    <tr>
                        
                        <td><h4>Price:</h4></td>
                        <td>@Html.TextBox("price","",new { type = "text",style="width:210px;height:25px", placeholder = "Price" })</td>
                        <td style="color:red; font-weight:bold;">@Html.ValidationMessageFor(m=>m.price)</td>
                    </tr>
                     <tr>
                        
                        <td><h4>Image1: </h4></td>
                        <td><input name="image1" type="file" data-preview-file-type="image"/> </td>
                        
                    </tr>
                     <tr>
                        
                        <td><h4>Image2: </h4></td>
                        <td><input name="image2" type="file" data-preview-file-type="image"/> </td>
                        
                    </tr>
           </table>
        

        <input type="submit" style="margin-left:150px" value="Send" />
        
    </div>
}
